@code{
    bool openFullScreen = false;
    private async Task FullScreen()
    {
        if (!openFullScreen)
        {
            openFullScreen = true;
            await Js.InvokeVoidAsync("openFullScreen");
        }
        else
        {
            openFullScreen = false;
            await Js.InvokeVoidAsync("closeFullscreen");

        }
    }
}