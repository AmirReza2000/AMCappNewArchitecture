        <div class="connection-status">
            <img src="template/icons/Notification.svg">
            <img src="template/icons/disconnected.svg">
            <img src="template/icons/shield.svg">
            <img src="template/icons/cloud_backup_restore.svg">
        </div>
        <div class="camera-status">
            <div>
                <button>
                    <img src="template/icons/portrait.svg">
                    <p>
                        آیفون
                    </p>
                </button>
                <button>
                    <img src="template/icons/dome_camera.svg">
                    <p>
                        نظارت
                    </p>
                </button>
            </div>
            <div>
                <button>
                    <img src="template/icons/chevron_down.svg">

                </button>
            </div>

        </div>
    </div>
</header>
