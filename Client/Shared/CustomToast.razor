@using Blazored.Toast.Services
<div class="toast bg-danger text-black align-items-center border-0">
	<div class="d-flex">
		<div class="toast-body" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5" data-bs-animation="true" data-bs-autohide="true">
			
			@(Message)
		</div>
		<button type="button" class="btn-close btn-close-black me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>

	</div>
</div>
@code {
	[Parameter]
	public string? Message { get; set; }
	[Parameter] public ToastLevel ToastLevel { get; set; }

}
